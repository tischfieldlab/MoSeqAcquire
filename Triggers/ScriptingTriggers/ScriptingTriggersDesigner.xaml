<UserControl x:Class="ScriptingTriggers.ScriptingTriggersDesigner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScriptingTriggers"
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="Hi there! I'm the designer for Scripting Triggers." />
        <avalonedit:TextEditor Document="{Binding Path=Settings.CodeDocument}"
                               FontFamily="Consolas"
                               Foreground="{DynamicResource MaterialDesignBody}"
                               VerticalScrollBarVisibility="Auto"
                               HorizontalScrollBarVisibility="Auto"
                               ShowLineNumbers="True" />
    </Grid>
</UserControl>
