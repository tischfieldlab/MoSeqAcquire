<UserControl x:Class="MoSeqAcquire.Views.Controls.Visualization.Overlay.CrosshairOverlayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MoSeqAcquire.Views.Controls.Visualization.Overlay"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Line Stretch="Uniform" 
              Stroke="{StaticResource ValidationErrorBrush}" 
              StrokeThickness="2" 
              X1="0.5" X2="0.5" 
              Y1="0.0" Y2="1.0" />

        <Line Stretch="Uniform" 
              Stroke="{StaticResource ValidationErrorBrush}" 
              StrokeThickness="2" 
              X1="0.0" X2="1.0" 
              Y1="0.5" Y2="0.5" />
    </Grid>
</UserControl>
